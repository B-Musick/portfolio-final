<% include ../partials/header %>
<div class="edit-blog-post-form-container">
    <!-- If donâ€™t make the action this way, it will just create new output on the screen -->
    <form class="edit-blog-post-form" action="/blogs/<%= blog._id %>?_method=PUT"" method=" POST">
        <!-- 
            - Action will sent the data to /blogs when post request made 
            - name the inputs with blog[] so can use req.body.blog which will 
            hold all the properties of the blog in it, then can be accessed by
            req.body.blog.title, etc...
        --> 
        <div class="blog-post-inner-container">
            <div class="new-blog-post-title">
                <h2>Edit Blog</h2>
            </div>
            <div class="new-blog-post-title-input">
                <label for="formTitle">TITLE</label>
                <input type="text" class="form-control" name="blog[title]" id="formTitle" value="<%=blog.title%>">
            </div>
            <div class="new-blog-post-image-input">
                <label for="formImage">IMAGE</label>
                <input type="text" class="form-control" name="blog[image]" id="formImage" value="<%=blog.image%>">
            </div>
            <div class="new-blog-post-body-input">
                <label for="formBody">BODY</label>
                <textarea class="form-control" id="formBody" name="blog[body]"><%=blog.text%></textarea>
            </div>
            <div class="new-blog-post-submit">
                <input type="submit" class="">
            </div>
        </div>  
    </form>
</div>

<% include ../partials/footer %>